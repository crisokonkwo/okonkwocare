---
import Layout from "../layouts/BaseLayout.astro";

import { Image } from "astro:assets";

import doctorImage from "../assets/dr-okonkwo_2.webp";
import media2 from "../assets/media2.webp";
import media3 from "../assets/nasdaq-billboard.webp";
import media4 from "../assets/Boston 2025-3786.jpg";
import media5 from "../assets/Boston 2025-3808.jpg";
import media6 from "../assets/nasdaq-billboard_2.jpg";

const base = import.meta.env.BASE_URL;
---

<Layout title="Media & Speaking | Okonkwo Care Pediatrics">
  <section class="bg-linear-to-b from-slate-50 to-white">
    <div class="mx-auto max-w-4xl px-4 py-12 md:py-16 space-y-10">

      <!-- Header -->
      <header class="space-y-3">
        <h1 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          Media & Speaking
        </h1>
        <p class="text-sm text-slate-600">
          Public education, professional dialogue, and community engagement in pediatric care.
        </p>
      </header>

      <!-- Purpose -->
      <section class="space-y-3">
        <p class="text-base leading-7 text-slate-700">
          Dr. Margaret Okonkwo is regularly invited to speak and provide expert
          commentary on pediatric health, integrative medicine, and parent education.
        </p>
        <p class="text-base leading-7 text-slate-700">
          Her contributions focus on evidence-informed care, holistic approaches
          to child health, and strengthening physicianâ€“family relationships through
          education and dialogue.
        </p>
      </section>

      <!-- Speaking -->
      <section class="space-y-4">
        <h2 class="text-xl font-semibold text-slate-900">
          Speaking Engagements
        </h2>
        <p class="text-sm text-slate-600">
          Educational and professional presentations for medical, parent, and community audiences.
        </p>

        <!-- Carousel -->
        <div class="mt-6">
          <div
            class="flex gap-4 overflow-x-auto pb-3 snap-x snap-mandatory scroll-px-4 [-webkit-overflow-scrolling:touch]"
            aria-label="Community and media highlights"
          >
            <!-- Slide 4 -->
            <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
              <div class="overflow-hidden rounded-xl bg-slate-100 ring-1 ring-brand-700/10 aspect-video">
                <Image
                  src={media4}
                  alt="Dr. Okonkwo speaking at an academic venue"
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
              <figcaption class="text-xs text-slate-500">Panel & interviews</figcaption>
            </figure>

            <!-- Slide 5 -->
            <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
              <div class="overflow-hidden rounded-xl bg-slate-100 ring-1 ring-brand-700/10 aspect-video">
                <Image
                  src={media5}
                  alt="Dr. Okonkwo presenting at a lecture"
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
              <figcaption class="text-xs text-slate-500">Panel & interviews</figcaption>
            </figure>
          </div>
        </div>

        <!-- <ul class="list-disc pl-5 space-y-2 text-sm text-slate-700">
          <li>Integrative and holistic approaches to pediatric care</li>
          <li>Preventive health and childhood wellness</li>
          <li>ADHD evaluation and management</li>
          <li>Supporting families through long-term pediatric relationships</li>
        </ul> -->

        <!-- <p class="text-sm text-slate-600">
          Formats include professional panels, parent education workshops,
          and community health talks.
        </p> -->
      </section>

      <!-- Media -->
      <section class="space-y-4">
        <h2 class="text-xl font-semibold text-slate-900">
          Media & Interviews
        </h2>
        <p class="text-sm text-slate-600">
          Expert commentary and educational interviews focused on child health and family care.
        </p>

        <!-- Carousel -->
        <div class="mt-6">
          <div
            class="flex gap-4 overflow-x-auto pb-3 snap-x snap-mandatory scroll-px-4 [-webkit-overflow-scrolling:touch]"
            aria-label="Community and media highlights"
          >

          <!-- Slide 1 -->
          <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
            <div class="overflow-hidden rounded-xl bg-slate-100 ring-1 ring-brand-700/10">
              <Image
                src={media2}
                  alt="Dr. Okonkwo speaking at a community health event"
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
              <figcaption class="text-xs text-slate-500">Television interview</figcaption>
            </figure>
            
          </div>
        </div>

        <!-- <ul class="list-disc pl-5 space-y-2 text-sm text-slate-700">
          <li>Television interviews on pediatric wellness and preventive care</li>
          <li>Podcast guest appearances discussing holistic pediatrics</li>
          <li>Expert interviews addressing common childhood health concerns</li>
        </ul> -->
      </section>

      <!-- Public Service & National Engagements -->
      <section class="space-y-4">
        <h2 class="text-xl font-semibold text-slate-900">
          Public Service & National Engagements
        </h2>

        <p class="text-sm text-slate-600">
          Participation in professional discussions related to pediatric and public health.
          Appearance for informational purposes and does not imply endorsement.
        </p>

        <div class="overflow-hidden rounded-xl border border-slate-200 bg-black shadow-soft w-1/2">
          <video
            controls
            preload="metadata"
            class="h-32 w-full object-cover sm:h-40 aspect-video"
            poster={`${base}images/surgeon-general-meeting-poster.webp`}
          >
            <source 
            src={`${base}videos/surgeon-general-meeting.mp4`} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>

        <p class="text-xs text-slate-500">
          Video: 1 minute 26 seconds.
        </p>
      </section>


      <!-- Highlights -->
      <section class="space-y-4">
        <h2 class="text-xl font-semibold text-slate-900">
          Selected Highlights
        </h2>

        <!-- Carousel -->
        <div class="mt-6">
        <div
          class="flex gap-4 overflow-x-auto pb-3 snap-x snap-mandatory scroll-px-4 [-webkit-overflow-scrolling:touch]"
          aria-label="Community and media highlights"
        >
          <!-- Slide 1 -->
          <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
            <div class="overflow-hidden rounded-xl ring-0 ring-brand-700/10">
              <Image
                src={doctorImage}
                alt="Dr. Okonkwo"
                class="h-full w-full object-contain"
              />
            </div>
            <figcaption class="text-xs text-slate-500">Community health event</figcaption>
          </figure>

            <!-- Slide 3 -->
            <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
              <div class="overflow-hidden rounded-xl ring-0 ring-brand-50">
                <Image
                  src={media3}
                  alt="Dr. Okonkwo participating in a panel or podcast discussion"
                  class="h-full w-auto object-contain"
                  loading="lazy"
                />
              </div>
              <figcaption class="text-xs text-slate-500">Community event</figcaption>
            </figure>

            <!-- Slide 4 -->
            <figure class="snap-start shrink-0 w-[85%] sm:w-[60%] lg:w-[32%] space-y-2">
              <div class="overflow-hidden rounded-xl bg-slate-100 ring-1 ring-brand-50">
                <Image
                  src={media6}
                  alt="Dr. Okonkwo participating in a panel or podcast discussion"
                  class="h-full w-auto object-contain"
                  loading="lazy"
                />
              </div>
              <figcaption class="text-xs text-slate-500">Community event</figcaption>
            </figure>
            
          </div>
        </div>

        <!-- <ul class="list-disc pl-5 space-y-2 text-sm text-slate-700">
          <li>Guest expert on pediatric health for local television programming</li>
          <li>Invited speaker for community-based parent education initiatives</li>
          <li>Interviewed on integrative approaches to childhood development</li>
        </ul> -->
      </section>

      <!-- Contact -->
      <section class="rounded-3xl border border-slate-200 bg-white p-6 shadow-soft">
        <h3 class="text-base font-semibold text-slate-900">
          Media & Speaking Inquiries
        </h3>
        <p class="mt-2 text-sm text-slate-600">
          For interview requests, speaking engagements, or collaborations:
        </p>
        <p class="mt-3 text-sm font-medium text-slate-900">
          <a href="mailto:info@okonkwocare.com" class="underline">
            info@okonkwocare.com
          </a>
        </p>
      </section>
    </div>
  </section>
</Layout>
