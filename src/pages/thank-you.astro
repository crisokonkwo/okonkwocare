---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Thank you" description="Message received.">
  <section class="bg-white">
    <div class="mx-auto max-w-3xl px-4 py-16 text-center">
      <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">Thank you</h1>
      <p class="mx-auto mt-3 max-w-xl text-sm leading-6 text-slate-600">
        We received your message and will respond as soon as available.
      </p>
      <a href="/" class="mt-6 inline-flex rounded-2xl bg-brand-700 px-5 py-3 text-sm font-semibold text-white no-underline hover:bg-brand-800">
        Return home
      </a>
    </div>
  </section>
</BaseLayout>
