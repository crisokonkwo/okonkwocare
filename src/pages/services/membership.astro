---
import BaseLayout from "../../layouts/BaseLayout.astro";

import MembershipHero from "../../components/membership/MembershipHero.astro";
import MembershipWhoItsFor from "../../components/membership/MembershipWhoItsFor.astro";
import MembershipPricing from "../../components/membership/MembershipPricing.astro";
import MembershipADHDOptions from "../../components/membership/MembershipADHDOptions.astro";
import MembershipSteps from "../../components/membership/MembershipSteps.astro";
import FourStepProcess from "../../components/FourStepProcess.astro";
import MembershipFAQ from "../../components/membership/MembershipFAQ.astro";
import MembershipCTA from "../../components/membership/MembershipCTA.astro";

const title = "Concierge Membership";
const description =
  "Concierge pediatric membership in Miami with direct physician access, unrushed visits, and continuity of care. See details, what’s included, and next steps.";
---

<BaseLayout title={title} description={description}>
    <main>
        <MembershipHero />
        <MembershipWhoItsFor />
        <MembershipPricing />
        <MembershipADHDOptions />
        <!-- <MembershipSteps /> -->
        <FourStepProcess
          title="How membership works"
          intro="A straightforward enrollment process designed to keep care calm and accessible."
          steps={[
            { n: "01", title: "Consult", desc: "Discuss your child’s needs and ensure fit." },
            { n: "02", title: "Enroll", desc: "Choose the membership option that matches your goals." },
            { n: "03", title: "Care plan", desc: "We create a personalized plan with follow-ups." },
            { n: "04", title: "Ongoing support", desc: "Direct access and continuity as your child grows." },
          ]}
        />
        <!-- <MembershipFAQ /> -->
        <MembershipCTA />
    </main>
</BaseLayout>