---
const {
  title = "How we can help",
  href = "contact",
  ctaText = "Contact our office",
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<div class="not-prose mt-12 rounded-2xl border border-brand-200 bg-brand-50 p-6">
  <h3 class="text-sm font-semibold text-brand-900">
    {title}
  </h3>

  <div class="mt-2 text-sm leading-6 text-brand-900/80">
    <slot />
  </div>

  <div class="mt-4">
    <a
      href={`${base}${href}`}
      class="inline-flex items-center gap-1 rounded-lg bg-brand-700 px-4 py-2 text-sm font-medium text-white no-underline hover:bg-brand-800 focus-visible:ring-2 focus-visible:ring-brand-600"
    >
      {ctaText}
      <svg
        class="h-4 w-4"
        viewBox="0 0 20 20"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          fill-rule="evenodd"
          d="M12.293 3.293a1 1 0 011.414 0l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414-1.414L15.586 11H2a1 1 0 110-2h13.586l-3.293-3.293a1 1 0 010-1.414z"
          clip-rule="evenodd"
        />
      </svg>
    </a>
  </div>
</div>
