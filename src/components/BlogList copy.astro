---
import type { CollectionEntry } from "astro:content";

type BlogPost = CollectionEntry<"blog">;

type Props = {
  posts: BlogPost[];
  title?: string;
  subtitle?: string;
  showSearch?: boolean;
  showCategoryChips?: boolean;
  initialCategory?: string; // e.g. "ADHD"
};

// const {
//   posts,
//   title = "Insights & Guidance for Parents",
//   subtitle = "Evidence-informed perspectives on pediatric health, ADHD, and integrative care — written by Dr. Margaret Okonkwo.",
//   showSearch = true,
//   showCategoryChips = true,
//   initialCategory = "All",
// } = Astro.props;

const {
  posts,
  title = "Okonkwo Care Blog - Your Resource for Insights & Guidance",
  subtitle = "Evidence-informed perspectives on pediatric health, ADHD, integrative care, and holistic pediatric healthcare.",
  showSearch = true,
  showCategoryChips = true,
  initialCategory = "All",
} = Astro.props;

// Build a clean category list (curated feel, no tag spam)
const categoriesFromPosts = Array.from(
  new Set(
    posts
      .map((p) => p.data.category)
      .filter(Boolean)
      .map(String)
  )
).sort((a, b) => a.localeCompare(b));

const categories = ["All", ...categoriesFromPosts];

const base = import.meta.env.BASE_URL;
---

<section class="bg-slate-50 border-b border-slate-200">
  <div class="mx-auto max-w-7xl px-4 py-10 md:py-12">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
      {title}
    </h1>
    <p class="mt-3 max-w-3xl text-sm leading-6 text-slate-600">
      {subtitle}
    </p>

    <div class="mt-6 grid gap-3 md:grid-cols-12 md:items-center">
      {showSearch && (
        <div class="md:col-span-6">
          <label class="sr-only" for="blog-search">Search posts</label>
          <input
            id="blog-search"
            type="search"
            placeholder="Search articles…"
            class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:ring-2 focus:ring-brand-600"
          />
        </div>
      )}

      {showCategoryChips && (
        <div class="md:col-span-6">
          <div class="flex gap-2 overflow-x-auto pb-1 blog-hide-scroll">
            {categories.map((cat) => (
              <button
                type="button"
                class="blog-chip shrink-0 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 focus-visible:ring-2 focus-visible:ring-brand-600"
                data-category={cat}
                aria-pressed={cat === initialCategory ? "true" : "false"}
              >
                {cat}
              </button>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<section class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-10 md:py-12">
    <div id="blog-empty" class="hidden rounded-2xl border border-slate-200 bg-slate-50 p-6 text-sm text-slate-600">
      No posts match your filters.
    </div>

    <div id="blog-list" class="divide-y divide-slate-200">
      {posts.map((post) => {
        const { title, description, pubDate, updatedDate, category } = post.data;

        // Format dates (server-side, consistent)
        const pub = new Date(pubDate).toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" });
        const upd = updatedDate
          ? new Date(updatedDate).toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" })
          : null;

        return (
          <article
            class="py-6"
            data-title={String(title).toLowerCase()}
            data-desc={String(description).toLowerCase()}
            data-category={(category ?? "Uncategorized").toString()}
          >
            <h2 class="text-lg font-semibold text-slate-900">
              <a href={`${base}blog/${post.slug}/`} class="hover:underline focus-visible:ring-2 focus-visible:ring-brand-600 rounded">
                {title}
              </a>
            </h2>

            <p class="mt-1 max-w-3xl text-sm leading-6 text-slate-600">
              {description}
            </p>

            <div class="mt-2 flex flex-wrap items-center gap-x-3 gap-y-1 text-xs text-slate-500">
              <span>Dr. Margaret Okonkwo</span>
              <span aria-hidden="true">·</span>
              <time datetime={new Date(pubDate).toISOString()}>{pub}</time>

              {upd && (
                <>
                  <span aria-hidden="true">·</span>
                  <span class="text-slate-500">
                    Updated <time datetime={new Date(updatedDate!).toISOString()}>{upd}</time>
                  </span>
                </>
              )}

              {category && (
                <>
                  <span aria-hidden="true">·</span>
                  <span class="inline-flex items-center rounded-full bg-brand-50 px-2 py-0.5 text-brand-800">
                    {category}
                  </span>
                </>
              )}
            </div>
          </article>
        );
      })}
    </div>
  </div>

  <style>
    .blog-hide-scroll::-webkit-scrollbar { display: none; }
    .blog-hide-scroll { scrollbar-width: none; }
    .blog-chip[aria-pressed="true"] {
      border-color: rgba(20, 83, 45, 0.25); /* brand-ish */
      background: rgba(34, 197, 94, 0.08); /* subtle green wash */
      color: rgb(22, 101, 52);
    }
  </style>

  <script>
    const input = document.getElementById("blog-search") as HTMLInputElement | null;
    const chips = Array.from(document.querySelectorAll(".blog-chip"));
    const list = document.getElementById("blog-list");
    const empty = document.getElementById("blog-empty");
    const items = list ? Array.from(list.querySelectorAll("article")) : [];

    let activeCategory = (chips.find(c => c.getAttribute("aria-pressed") === "true") as HTMLElement)?.dataset.category || "All";

    function applyFilters() {
      const q = (input?.value || "").trim().toLowerCase();

      let visibleCount = 0;

      for (const el of items) {
        const title = el.dataset.title || "";
        const desc = el.dataset.desc || "";
        const cat = el.dataset.category || "Uncategorized";

        const matchesText = !q || title.includes(q) || desc.includes(q);
        const matchesCat = activeCategory === "All" || cat === activeCategory;

        const show = matchesText && matchesCat;
        el.classList.toggle("hidden", !show);
        if (show) visibleCount++;
      }

      empty?.classList.toggle("hidden", visibleCount !== 0);
    }

    chips.forEach((chip) => {
      chip.addEventListener("click", () => {
        const next = (chip as HTMLElement).dataset.category || "All";
        activeCategory = next;

        chips.forEach((c) => c.setAttribute("aria-pressed", c === chip ? "true" : "false"));
        applyFilters();
      });
    });

    input?.addEventListener("input", applyFilters);

    // Initial
    applyFilters();
  </script>
</section>
