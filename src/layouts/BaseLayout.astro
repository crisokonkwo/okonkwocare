---
import Seo from "../components/Seo.astro";
import SkipLink from "../components/SkipLink.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
    <head>
        <Seo title={title} description={description} />
        <link rel="icon" href={`${base}favicon.ico`} sizes="any" />
        <link rel="icon" type="image/png" sizes="96x96" href={`${base}favicon/favicon-96x96.png`} />
        <link rel="icon" type="image/png" sizes="192x192" href={`${base}favicon/web-app-manifest-192x192.png`} />
        <link rel="icon" type="image/png" sizes="512x512" href={`${base}favicon/web-app-manifest-512x512.png`} />
        
        <link rel="apple-touch-icon" href={`${base}favicon/apple-touch-icon.png`} />
        <link rel="mask-icon" href={`${base}favicon/safari-pinned-tab.svg`} color="#4ade80" />
        <link rel="manifest" href={`${base}favicon/site.webmanifest`} />
        <link rel="stylesheet" href={`${base}src/styles/global.css`} />
        <meta name="theme-color" content="#4ade80" />
    </head>
    <body>
        <SkipLink />
        <Header />
        <main id="main" class="min-h-[60vh]">
            <slot />
        </main>
        <Footer />
    </body>
</html>
