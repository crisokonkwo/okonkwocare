---
import Seo from "../components/Seo.astro";
import SkipLink from "../components/SkipLink.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { site } from "../lib/site";
import "../styles/global.css";

const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
    <head>
        <Seo title={title} description={description} />
        
        <!-- Preconnect to speed up third-party resources if any -->
        <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
        
        <!-- Favicons - defer non-critical icons -->
        <link rel="icon" href={`${base}favicon.ico`} sizes="any" />
        <link rel="icon" type="image/png" sizes="96x96" href={`${base}favicon/favicon-96x96.png`} />
        
        <!-- Defer these favicons as they're not critical for initial render -->
        <link rel="icon" type="image/png" sizes="192x192" href={`${base}favicon/web-app-manifest-192x192.png`} media="print" onload="this.media='all'" />
        <link rel="icon" type="image/png" sizes="512x512" href={`${base}favicon/web-app-manifest-512x512.png`} media="print" onload="this.media='all'" />
        <link rel="apple-touch-icon" href={`${base}favicon/apple-touch-icon.png`} media="print" onload="this.media='all'" />
        <link rel="mask-icon" href={`${base}favicon/safari-pinned-tab.svg`} color="#4ade80" />
        <link rel="manifest" href={`${base}favicon/site.webmanifest`} />
        <meta name="theme-color" content="#4ade80" />

        <!-- Structured Data for Medical Business -->
         <!-- Schema linking = adding structured data (JSON-LD) to your site so Google (and other search engines) can clearly understand -->
        <script type="application/ld+json" is:inline>
            {JSON.stringify({
            "@context": "https://schema.org",
            "@type": "MedicalBusiness",
            "@id": "https://okonkwocarepediatrics.com/#clinic",
            "name": "Okonkwo Care Pediatrics",
            "url": "https://okonkwocarepediatrics.com/",
            "telephone": "+13053815507",
            "email": "info@okonkwocare.com",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "5582 N.E. 4th Ct Suite #9",
                "addressLocality": "Miami",
                "addressRegion": "FL",
                "postalCode": "33137",
                "addressCountry": "US"
            },
            "medicalSpecialty": "Pediatrics",
            "employee": {
                "@type": "Physician",
                "@id": "https://okonkwocarepediatrics.com/about-dr-okonkwo/#physician"
            }
            })}
        </script>

    </head>
    <body>
        <SkipLink />
        <Header />
        <main id="main" class="min-h-[60vh]">
            <slot />
        </main>
        <Footer />
        
        <!-- Mobile sticky call CTA -->
        <div class="fixed inset-x-0 bottom-0 z-50 border-t border-slate-200 bg-white/95 backdrop-blur lg:hidden">
            <div class="mx-auto max-w-7xl px-4 py-3">
                <a href={`tel:${site.phoneTel}`}
                class="block w-full rounded-xl bg-brand-700 px-5 py-3 text-center text-sm font-semibold text-white no-underline hover:bg-brand-800"
                > Contact Us {site.phoneDisplay}</a>
            </div>
        </div>
    </body>
</html>
