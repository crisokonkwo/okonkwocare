---
import Seo from "../components/Seo.astro";
import SkipLink from "../components/SkipLink.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
    <head>
        <Seo title={title} description={description} />
        
        <!-- Preconnect to speed up third-party resources if any -->
        <!-- <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin> -->
        
        <!-- Favicons - defer non-critical icons -->
        <link rel="icon" href={`${base}favicon.ico`} sizes="any" />
        <link rel="icon" type="image/png" sizes="96x96" href={`${base}favicon/favicon-96x96.png`} />
        
        <!-- Defer these favicons as they're not critical for initial render -->
        <link rel="icon" type="image/png" sizes="192x192" href={`${base}favicon/web-app-manifest-192x192.png`} media="print" onload="this.media='all'" />
        <link rel="icon" type="image/png" sizes="512x512" href={`${base}favicon/web-app-manifest-512x512.png`} media="print" onload="this.media='all'" />
        <link rel="apple-touch-icon" href={`${base}favicon/apple-touch-icon.png`} media="print" onload="this.media='all'" />
        <link rel="mask-icon" href={`${base}favicon/safari-pinned-tab.svg`} color="#4ade80" />
        <link rel="manifest" href={`${base}favicon/site.webmanifest`} />
        <meta name="theme-color" content="#4ade80" />
    </head>
    <body>
        <SkipLink />
        <Header />
        <main id="main" class="min-h-[60vh]">
            <slot />
        </main>
        <Footer />
    </body>
</html>
